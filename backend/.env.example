# Backend Environment Variables
NODE_ENV=development
PORT=3000

# Database - MongoDB
MONGODB_URI=mongodb://admin:admin123@localhost:27017/itexperience?authSource=admin

# JWT Secrets & Config
JWT_SECRET=your-super-secret-jwt-key-change-in-production-32-chars-min
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-32-chars-min
JWT_EXPIRATION=7d
JWT_REFRESH_EXPIRATION=30d

# Authentication
AUTH_LOCKOUT_ATTEMPTS=5
AUTH_LOCKOUT_DURATION_MS=900000

# CORS - Configure for Web and Mobile apps
CORS_ORIGIN=http://localhost:3001,http://localhost:5000,http://localhost:8080,https://dctpass.vercel.app
CORS_CREDENTIALS=true

# Cookies (Web)
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=10

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Optional: Email Configuration (for password reset, email verification)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Optional: S3/Cloud Storage (for file uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=itexperience-uploads

# Optional: Analytics
SENTRY_DSN=
